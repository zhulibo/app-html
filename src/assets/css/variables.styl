@charset "utf-8";

bg-f5 = #f5f5f5
black-1c = #1c1c1c
purple = #7543ff

line1() {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

line2() {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

line3() {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

btn1() {
  display: inline-block;
  box-sizing: border-box;
  padding: 0 1em;
  height: 2.4em;
  line-height: 2.4;
  border-radius: 1.2em;
  background-color: #eee;
}

btn2() {
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 2.6em;
  text-align: center;
  line-height: 2.6;
  border-radius: .4em;
  background-color: #eee;
}
